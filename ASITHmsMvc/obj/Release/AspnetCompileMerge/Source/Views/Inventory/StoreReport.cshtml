@model ASITHmsMvc.Models.DtoModels.storereportDTO
@{
    ViewBag.Title = "StoreReport";
}

<div class="main-content small-gutter">

    <div class="row justify-content-md-center" id="loading">
        <div class="col-md-12 bot-mar">
            <div class="progress">
                <div class="progress-bar progress-bar-striped progress-bar-animated bg-warning w-100" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"> <p style="font-size:17px; color: #000; padding-top: 10px;">Loading...</p></div> <br />
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card card-bdr">
                <div class="panel panel-success">
                    <div class="card-header">

                        <button class="btn btn-circle btn-custom pdf"><i class='fa fa fa-print'></i></button>
                        <a class="btn btn-circle btn-custom pdf" target="_blank" href="@Url.Action("StoreReport","inventory", new RouteValueDictionary ( new {DatedForm=ViewBag.DatedForml,DatedTo =ViewBag.DatedTol,ItemGroup =ViewBag.ItemGroupl,Location =ViewBag.Locationl,ReportTitles =ViewBag.ReportTitlesl, reportType="pdf" }))"><i class='fa fa-file-pdf-o'></i></a>
                        <a class="btn btn-circle btn-custom pdf" target="_blank" href="@Url.Action("StoreReport","inventory", new RouteValueDictionary ( new {DatedForm=ViewBag.DatedForml,DatedTo =ViewBag.DatedTol,ItemGroup =ViewBag.ItemGroupl,Location =ViewBag.Locationl,ReportTitles =ViewBag.ReportTitlesl, reportType="docx"}))"><i class="fa fa-file-word-o"></i></a>
                        <a class="btn btn-circle btn-custom pdf" target="_blank" href="@Url.Action("StoreReport","inventory", new RouteValueDictionary ( new { DatedForm=ViewBag.DatedForml,DatedTo =ViewBag.DatedTol,ItemGroup =ViewBag.ItemGroupl,Location =ViewBag.Locationl,ReportTitles =ViewBag.ReportTitlesl, reportType="xlsx"}))"><i class="fa fa-file-excel-o"></i></a>
                    </div>
                    <div class="card-header panel-heading">
                        <button type="button" data-toggle="collapse" data-target="#multiCollapseExample2" aria-expanded="false" aria-controls="multiCollapseExample2" class="btn btn-custom btn-block text-center">STORE(INVENTORY) OPERATION REPORTS</button>

                    </div>
                    <div class="collapse multi-collapse" id="multiCollapseExample2">
                        <div class="card-body panel-body">
                            @using (Html.BeginForm("StoreReport", "Inventory", FormMethod.Get))
                            {
                                <div class="row justify-content-md-center">
                                    <div class="col-sm-6 col-md-4" style="margin-right:24px !important">
                                        <div class="form-group ">
                                            <label class="labels">Dated Form :</label>
                                            <input type="date" name="DatedForm" id="datePicker" class="form-control" required />
                                            @*@Html.EditorFor(model => model., new { htmlAttributes = new { @class = "form-control", @type = "text", @id = "datepicker", @required = "required" } })*@
                                            @Html.ValidationMessageFor(model => model.DatedForm, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group ">
                                            <label class="labels">Dated To :</label>
                                            <input type="date" name="DatedTo" id="datePicker1" class="form-control" required />
                                            @*@Html.EditorFor(model => model.toDate, new { htmlAttributes = new { @class = "form-control", @type = "text", @id = "datepicker1", @required = "required" } })*@
                                            @Html.ValidationMessageFor(model => model.DatedTo, "", new { @class = "text-danger" })
                                        </div>

                                        <div class="form-group ">
                                            <label class="labels">Item Name :</label>
                                            <input type="text" name="ItemName" class="form-control" />
                                            @*@Html.EditorFor(model => model.toDate, new { htmlAttributes = new { @class = "form-control", @type = "text", @id = "datepicker1", @required = "required" } })*@
                                            @Html.ValidationMessageFor(model => model.ItemName, "", new { @class = "text-danger" })
                                        </div>

                                        <div class="form-group ">
                                            <label class="labels">Supply Source :</label>
                                            <input type="text" name="SupplySource" id="" class="form-control" />
                                            @*@Html.EditorFor(model => model.toDate, new { htmlAttributes = new { @class = "form-control", @type = "text", @id = "datepicker1", @required = "required" } })*@
                                            @Html.ValidationMessageFor(model => model.SupplySource, "", new { @class = "text-danger" })
                                        </div>
                                    </div>



                                    <div class="col-sm-6 col-md-4">
                                        <div class="form-group grpType">
                                            <label class="labels">Location :</label>
                                            @Html.DropDownList("Location", null, htmlAttributes: new { @class = "form-control active form-group ddlType", @id = "dropdownlist", @reuired = "required" })
                                            @Html.ValidationMessageFor(model => model.Location, "", new { @class = "text-danger" })

                                        </div>

                                        <div class="form-group grpType">
                                            <label class="labels">Group :</label>
                                            @Html.DropDownList("ItemGroup", null, htmlAttributes: new { @class = "form-control dropdown form-group ddlType", @id = "dropdownlist1", @required = "required" })

                                        </div>
                                        <div class="form-group grpType">
                                            <label class="labels">Report :</label>
                                            @Html.DropDownList("ReportTitles", null, htmlAttributes: new { @class = "form-control dropdown form-group ddlType", @id = "dropdownlist1", @required = "required" })

                                        </div>
                                        <div class="form-group ">
                                            <label class="labels">Staff Name :</label>
                                            <input type="text" name="StaffName" id="" class="form-control" />
                                            @*@Html.EditorFor(model => model.toDate, new { htmlAttributes = new { @class = "form-control", @type = "text", @id = "datepicker1", @required = "required" } })*@
                                            @Html.ValidationMessageFor(model => model.StaffName, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="col-md-8 form-group">
                                        <button type="submit" class="btn btn-custom btn-block bntGroupShow  btn btn-margin" onclick="submitFrom()">Show</button>

                                    </div>
                                </div>
                            }



                        </div>
                    </div>

                </div>


      
                <input name="sr" value="@ViewBag.lbltbl1" type="hidden"/>
                <div class="card">
                    <div class="col-xl-12 col-md-12 col-sm-12 col-xs-12">
                        <p class="mt-5">
                            @Html.Raw(ViewBag.lbltitle1)
                        </p>
                        <div class="mt-5">


                            @Html.Raw(ViewBag.lbltbl1)
                        </div>
                        
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>


@section scripts {
    <script>
        $(document).ready(function () {
          
            $('#loading').addClass('hide');
            $("#datepicker").datepicker();
            $("#datepicker").datepicker("option", "dateFormat", "d-M-y");
            $("#datepicker1").datepicker();
            $("#datepicker1").datepicker("option", "dateFormat", "d-M-y");
            $('#mytable').DataTable({
                "ordering": false
            });

            var sr = $("[name='sr']").val();
            if (sr != "") {
                $('#multiCollapseExample2').collapse('hide');
            } else { $('.collapse').collapse(); }
        })


        function submitFrom() {
            $('#loading').addClass('show');
            }

            

        




      
    </script>

}

